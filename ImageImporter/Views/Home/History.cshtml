@using ImageImporter.Models.View
@model IEnumerable<ImportResultViewModel>


@{
    ViewData["Title"] = "History";
}


 
<div class="container">
    <div class="row">
        <fieldset>
            <legend class="FieldSet-legend-2KHms">History</legend>
            <table class="Table-table-1Ion0">
	            <thead><tr>
                    <th>Timestamp </th>
                    <th>Status </th>
                    <th>Hash </th>
                    <th>RelativePath</th>
                    <th>Kept</th>
                    <th>Removed</th>
	            </tr></thead>

                <tbody>
					
                @foreach(var item in Model)
				{
					
					<tr id="@item.Id">
                        <td id="Timestamp ">@item.Timestamp </td>
                        <td id="Status ">@item.Status </td>
                        <td id="Hash ">@item.Hash </td>
                        <td id="RelativePath">@item.RelativePath</td>
                        <td id="Thumb"><img src="@item.Thumb" class="thumb"/></td>
                        <td id="RMThumb"><img src="@item.RemovedThumb" class="thumb"/></td>
					</tr>
				}

				</tbody>
            </table>
        </fieldset>
    </div>
</div>


<script src="~/lib/microsoft-signalr/signalr.js"></script>
